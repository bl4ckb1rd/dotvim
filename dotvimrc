" syntax js in .py
function! AddSyntax()
  let b:current_syntax = ''
  unlet b:current_syntax

  syntax include @JSCode $VIMRUNTIME/syntax/javascript.vim
  syntax region rgnJS start='# start js code' end='# end js code' contains=@JSCode
  let b:current_syntax = ''
  unlet b:current_syntax
  let b:current_syntax='combined'
endfunction

